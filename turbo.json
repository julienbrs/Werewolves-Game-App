{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "outputs": ["dist/**"],
      "dependsOn": ["^build", "^db:generate"]
    },
    "doc": {},
    "dev": {
      "dependsOn": ["^db:generate", "doc"],
      "cache": false,
      "persistent": true
    },
    "type-check": {
      "outputs": []
    },
    "lint": {},
    "lint:fix": {},
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "test": {
      "dependsOn": ["^db:generate"],
      "inputs": ["src/**", "test/**"]
    },
    "test:watch": {
      "cache": false
    }
  },
  "globalEnv": [
    "SECRET",
    "DATABASE_URL",
    "POSTGRES_USER",
    "POSTGRES_PASSWORD",
    "POSTGRES_DB",
    "IP",
    "PORT",
    "PROTOCOL",
    "BASE_URL",
    "UTC_OFFSET",
    "NODE_ENV"
  ]
}
